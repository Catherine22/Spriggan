{
    "name": "Spriggan",
    "description": "Find out risky websites at a glance. Protect users against data breaches.",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting", "tabs"],
    "host_permissions": ["https://haveibeenpwned.com/"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/shield16.png",
            "32": "/images/shield32.png",
            "48": "/images/shield48.png",
            "128": "/images/shield128.png"
        }
    },
    "icons": {
        "16": "/images/shield16.png",
        "32": "/images/shield32.png",
        "48": "/images/shield48.png",
        "128": "/images/shield128.png"
    },
    "options_page": "options.html"
}
