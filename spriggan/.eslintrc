{
    "root": true,
    "env": {
        "es6": true,
        "webextensions": true,
        "browser": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "rules": {
            "prettier/prettier": "error",
            "quotes": ["error", "single"],
            "indent": ["error", 4],
            "semi": [1, "always"]
        }
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"]
}
